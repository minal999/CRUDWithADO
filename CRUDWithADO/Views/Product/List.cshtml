
@{
    ViewData["Title"] = "List";
}

<h3>Product List</h3>
<p>
    @Html.ActionLink("Add product","Create","Product")
</p>
<table class="table table-bordered">
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Product Price</th>
        <th>Action</th>
    </tr>
    @foreach (Product item in ViewBag.ProductList)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                @Html.ActionLink("Edit","Edit",new {@id=item.Id}) |
                @Html.ActionLink("Delete","Delete",new {@id=item.Id}) |
                @Html.ActionLink("View","Details",new {@id=item.Id})
            </td>
        </tr>
    }
</table>

