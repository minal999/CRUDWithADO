
@{
    ViewData["Title"] = "List";
}

<h3>Person List</h3>
<p>
    @Html.ActionLink("Add person","Create","Person")
</p>
<table class="table table-bordered">
    <tr>
        <th>Person Id</th>
        <th>Person Name</th>
        <th>City</th>
        <th>Age</th>
        <th>Action</th>
    </tr>
    @foreach (Person item in ViewBag.PersonList)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.City</td>
            <td>@item.Age</td>
            <td>
                @Html.ActionLink("Edit","Edit",new {@id=item.Id}) |
                @Html.ActionLink("Delete","Delete",new {@id=item.Id}) |
                @Html.ActionLink("View","Details",new {@id=item.Id})
            </td>
        </tr>
    }
</table>

